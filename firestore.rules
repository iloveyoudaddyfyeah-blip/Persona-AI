/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for all data.
 *
 * Data Structure:
 * - /users/{userId}: Each user has a dedicated document to store their settings.
 * - /users/{userId}/personas/{personaId}: User-created personas are stored as subcollections.
 * - /users/{userId}/characters/{characterId}: Character profiles generated or customized by the user.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Listing of user documents is disallowed for privacy.
 * - All write operations require authentication.
 * - Data validation is limited to ownership checks and relational integrity for core entities.
 *
 * Denormalization for Authorization:
 *   - User ID is used in the path for user-owned documents and subcollections to avoid `get()` calls.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects the root user document. Only the authenticated user can read and write their own document.
     * @path /databases/{database}/documents/users/{userId}
     * @allow (create) - User with UID 'user_abc' can create their own user document.
     *     request.auth.uid == 'user_abc'
     *     request.resource.data.id == 'user_abc'
     * @allow (get, update, delete) - User with UID 'user_abc' can get, update, and delete their own user document.
     *     request.auth.uid == 'user_abc'
     * @deny (create) - User with UID 'user_xyz' cannot create a user document with ID 'user_abc'.
     *     request.auth.uid == 'user_xyz'
     *     request.resource.data.id == 'user_abc'
     * @deny (get, update, delete) - User with UID 'user_xyz' cannot get, update, or delete user document 'user_abc'.
     *     request.auth.uid == 'user_xyz'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      // Users collection: Only allow access to the user's own document.
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isNewOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);

      /**
       * @description Manages user-specific personas. Only the owner can create, read, update, and delete their personas.
       * @path /databases/{database}/documents/users/{userId}/personas/{personaId}
       * @allow (create) - User 'user_abc' can create a new persona in their own collection.
       *     request.auth.uid == 'user_abc'
       * @allow (get, list, update, delete) - User 'user_abc' can read, list, update, and delete personas in their own collection.
       *     request.auth.uid == 'user_abc'
       * @deny (create) - User 'user_xyz' cannot create a persona in 'user_abc's collection.
       *     request.auth.uid == 'user_xyz'
       * @deny (get, list, update, delete) - User 'user_xyz' cannot read, list, update, or delete personas in 'user_abc's collection.
       *     request.auth.uid == 'user_xyz'
       * @principle Restricts access to a user's own data tree.
       */
      match /personas/{personaId} {
        // UserPersonas subcollection: Only allow access to the user's own personas.
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId);
        allow update: if isSignedIn() && isExistingOwner(userId);
        allow delete: if isSignedIn() && isExistingOwner(userId);
      }

      /**
       * @description Manages user-specific character profiles. Only the owner can create, read, update, and delete their characters.
       * @path /databases/{database}/documents/users/{userId}/characters/{characterId}
       * @allow (create) - User 'user_abc' can create a new character in their own collection.
       *     request.auth.uid == 'user_abc'
       * @allow (get, list, update, delete) - User 'user_abc' can read, list, update, and delete characters in their own collection.
       *     request.auth.uid == 'user_abc'
       * @deny (create) - User 'user_xyz' cannot create a character in 'user_abc's collection.
       *     request.auth.uid == 'user_xyz'
       * @deny (get, list, update, delete) - User 'user_xyz' cannot read, list, update, or delete characters in 'user_abc's collection.
       *     request.auth.uid == 'user_xyz'
       * @principle Restricts access to a user's own data tree.
       */
      match /characters/{characterId} {
        // CharacterProfiles subcollection: Only allow access to the user's own characters.
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId);
        allow update: if isSignedIn() && isExistingOwner(userId);
        allow delete: if isSignedIn() && isExistingOwner(userId);
      }
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

    function isNewOwner(userId) {
    return request.auth.uid == userId && request.resource.data.id == userId;
  }

  function isExistingOwner(userId) {
    return isOwner(userId) && resource != null;
  }
}