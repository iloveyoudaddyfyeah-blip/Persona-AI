/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model.  Users can only
 * read and write their own data, with limited public read access where
 * explicitly allowed. Data shape validation is relaxed to allow for rapid prototyping.
 *
 * Data Structure:
 * - /users/{userId}: Stores user-specific data and settings.
 * - /users/{userId}/personas/{personaId}: Stores user-created personas.
 * - /characters/{characterId}: Stores character profiles; publicly readable, but owner-writeable.
 *
 * Key Security Decisions:
 * - Users can only access their own user document.
 * - Users can only manage their own personas.
 * - Character profiles are publicly readable, but only the owner can modify them.
 * - Listing of user documents and user personas is restricted to the owner.
 * - Data shape validation is limited to ensuring relationship integrity (e.g., user IDs match).
 *
 * Denormalization for Authorization:
 * - The `CharacterProfile` entity requires an `ownerId` field to enforce ownership.  This allows
 *   rules to quickly verify ownership without additional reads.
 *
 * Structural Segregation:
 * - Publicly readable `CharacterProfile` documents are stored in a top-level collection (`/characters/{characterId}`),
 *   separate from private user data stored under `/users/{userId}`.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure access to the user's root document.
     * @path /databases/{database}/documents/users/{userId}
     * @allow (get, create, update, delete, list): Authenticated user can only access their own document.
     * @deny (get, list): Request without authentication.
     * @deny (create, update, delete): Mismatched user ID in path.
     * @principle Enforces document ownership and self-creation.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure access to the user's personas subcollection.
     * @path /databases/{database}/documents/users/{userId}/personas/{personaId}
     * @allow (get, create, update, delete, list): Authenticated user can only access their own personas.
     * @deny (get, create, update, delete, list): Request without authentication.
     * @deny (create, update, delete): Mismatched user ID in path or data.
     * @principle Enforces document ownership for writes, allows owner-only reads.
     */
    match /users/{userId}/personas/{personaId} {

      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if get == true;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure access to the character profiles collection. Public read, owner-only writes.
     * @path /databases/{database}/documents/characters/{characterId}
     * @allow (get, list): Public read access for all users.
     * @allow (create, update, delete): Only the owner can modify a character profile. The 'ownerId' field MUST be present in the document.
     * @deny (create, update, delete): Request without authentication or mismatched owner ID.
     * @principle Public read, owner-only writes with ownership validation.
     */
    match /characters/{characterId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(ownerId) {
        return isSignedIn() && request.auth.uid == ownerId;
      }

      function isExistingOwner(ownerId) {
        return isSignedIn() && request.auth.uid == ownerId && resource.data.ownerId == request.auth.uid;
      }
       allow get, list: if true;
       allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
       allow update: if isSignedIn() && request.auth.uid == resource.data.ownerId;
       allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }
  }
}