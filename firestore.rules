/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model.  Each user has full control
 * over their own data, and no access to other users' data.  Anonymous and authenticated
 * users are treated the same from an authorization perspective, with the exception
 * that only authenticated users can create a root user document.
 *
 * Data Structure:
 * - /users/{userId}: Stores user-specific data.  The {userId} MUST match the
 *   authenticated user's UID.
 * - /users/{userId}/characters/{characterId}: Stores character profiles created by the user.
 *   The {userId} MUST match the parent user's UID.
 * - /users/{userId}/personas/{personaId}: Stores user personas. The {userId} MUST match the
 *   parent user's UID.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Listing of users is disallowed.
 * - Users can create their own user document provided that the UID matches.
 *
 * Denormalization for Authorization:
 *  - The rules rely on the `userId` present in the path to match the authenticated
 *    user's UID. This avoids the need to store the UID inside the document and
 *    perform additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Rules for the /users/{userId} collection.
     * @path /users/{userId}
     * @allow (create) Authenticated user can create their own user document if the userId matches their auth.uid.
     * @allow (get, update, delete) Authenticated user can get, update, and delete their own user document if the userId matches their auth.uid.
     * @deny (create) Unauthenticated user cannot create a user document.
     * @deny (get, update, delete) Authenticated user cannot get, update, or delete another user's document.
     * @deny (list) Listing all user documents is not allowed.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/characters/{characterId} collection.
     * @path /users/{userId}/characters/{characterId}
     * @allow (create) Authenticated user can create a character under their user id.
     * @allow (get, update, delete) Authenticated user can get, update, and delete their own characters.
     * @deny (create) Unauthenticated user cannot create a character.
     * @deny (get, update, delete) Authenticated user cannot get, update, or delete another user's character.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/characters/{characterId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

     /**
      * @description Rules for the /users/{userId}/personas/{personaId} collection.
      * @path /users/{userId}/personas/{personaId}
      * @allow (create) Authenticated user can create a persona under their user id.
      * @allow (get, update, delete) Authenticated user can get, update, and delete their own personas.
      * @deny (create) Unauthenticated user cannot create a persona.
      * @deny (get, update, delete) Authenticated user cannot get, update, or delete another user's persona.
      * @principle Enforces document ownership for writes.
      */
    match /users/{userId}/personas/{personaId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
        
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}