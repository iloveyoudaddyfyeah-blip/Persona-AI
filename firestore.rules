/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for all data.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, ensuring that each user has a private data tree.
 * - /users/{userId}: User profile information.
 * - /users/{userId}/characters/{characterId}: Character profiles created by the user.
 * - /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}: Chat sessions for a character profile.
 * - /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}/chatMessages/{chatMessageId}: Chat messages within a chat session.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - All write operations are restricted to the authenticated user who owns the data.
 * - Data validation is minimal, focusing on relational integrity (user ID matching the path).
 * - Read and Write access MUST be restricted to the authenticated user
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces user-ownership for user profiles.
     * @path /users/{userId}
     * @allow (create) Authenticated user creates their own profile.
     * @deny (create) Authenticated user attempts to create a profile for another user.
     * @allow (get, list) Authenticated user retrieves their own profile.
     * @deny (get, list) Authenticated user attempts to retrieve another user's profile.
     * @allow (update, delete) Authenticated user updates or deletes their own profile.
     * @deny (update, delete) Authenticated user attempts to update or delete another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for character profiles.
     * @path /users/{userId}/characters/{characterId}
     * @allow (create) Authenticated user creates a character profile under their user ID.
     * @deny (create) Authenticated user attempts to create a character profile under another user's ID.
     * @allow (get, list) Authenticated user retrieves their own character profiles.
     * @deny (get, list) Authenticated user attempts to retrieve another user's character profiles.
     * @allow (update, delete) Authenticated user updates or deletes their own character profiles.
     * @deny (update, delete) Authenticated user attempts to update or delete another user's character profiles.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/characters/{characterId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for chat sessions.
     * @path /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}
     * @allow (create) Authenticated user creates a chat session under their character profile.
     * @deny (create) Authenticated user attempts to create a chat session under another user's profile.
     * @allow (get, list) Authenticated user retrieves their own chat sessions.
     * @deny (get, list) Authenticated user attempts to retrieve another user's chat sessions.
     * @allow (update, delete) Authenticated user updates or deletes their own chat sessions.
     * @deny (update, delete) Authenticated user attempts to update or delete another user's chat sessions.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for chat messages.
     * @path /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}/chatMessages/{chatMessageId}
     * @allow (create) Authenticated user creates a chat message under their chat session.
     * @deny (create) Authenticated user attempts to create a chat message under another user's session.
     * @allow (get, list) Authenticated user retrieves their own chat messages.
     * @deny (get, list) Authenticated user attempts to retrieve another user's chat messages.
     * @allow (update, delete) Authenticated user updates or deletes their own chat messages.
     * @deny (update, delete) Authenticated user attempts to update or delete another user's chat messages.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}/chatMessages/{chatMessageId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
  }
}