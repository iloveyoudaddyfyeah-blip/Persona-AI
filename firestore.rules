/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for all data.
 *
 * Data Structure:
 * - /users/{userId}: User profile information.
 * - /users/{userId}/characters/{characterId}: Character profiles created by the user.
 * - /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}: Chat sessions for a specific character profile.
 * - /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}/chatMessages/{chatMessageId}: Chat messages for a specific chat session.
 *
 * Key Security Decisions:
 * - Only authenticated users can access data.
 * - Users can only access their own data (ownership enforced via path-based rules).
 * - Listing of users is disallowed.
 *
 * Denormalization for Authorization:
 * - Each document nested under `/users/{userId}` has an implicit `userId` through the path. We validate this on creation and enforce immutability on updates to ensure data consistency.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces access control for user profiles. Only the authenticated user can read and write their own profile.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their profile.
     * @allow (get) User with ID 'user123' can read their profile.
     * @allow (update) User with ID 'user123' can update their profile.
     * @allow (delete) User with ID 'user123' can delete their profile.
     * @deny (create) User with ID 'user456' cannot create a profile for 'user123'.
     * @deny (get) User with ID 'user456' cannot read the profile of 'user123'.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Enforces access control for character profiles. Only the user who owns the parent user document can access these profiles.
     * @path /users/{userId}/characters/{characterId}
     * @allow (create) User with ID 'user123' can create a character profile under their user document.
     * @allow (get) User with ID 'user123' can read a character profile under their user document.
     * @allow (update) User with ID 'user123' can update a character profile under their user document.
     * @allow (delete) User with ID 'user123' can delete a character profile under their user document.
     * @deny (create) User with ID 'user456' cannot create a character profile under 'user123'.
     * @deny (get) User with ID 'user456' cannot read a character profile under 'user123'.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/characters/{characterId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.userId == userId;
      allow delete: if isSignedIn() && isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Enforces access control for chat sessions. Only the user who owns the parent character profile can access these chat sessions.
     * @path /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}
     * @allow (create) User with ID 'user123' can create a chat session under their character profile.
     * @allow (get) User with ID 'user123' can read a chat session under their character profile.
     * @allow (update) User with ID 'user123' can update a chat session under their character profile.
     * @allow (delete) User with ID 'user123' can delete a chat session under their character profile.
     * @deny (create) User with ID 'user456' cannot create a chat session under 'user123'.
     * @deny (get) User with ID 'user456' cannot read a chat session under 'user123'.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Enforces access control for chat messages. Only the user who owns the parent chat session can access these chat messages.
     * @path /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}/chatMessages/{chatMessageId}
     * @allow (create) User with ID 'user123' can create a chat message under their chat session.
     * @allow (get) User with ID 'user123' can read a chat message under their chat session.
     * @allow (update) User with ID 'user123' can update a chat message under their chat session.
     * @allow (delete) User with ID 'user123' can delete a chat message under their chat session.
     * @deny (create) User with ID 'user456' cannot create a chat message under 'user123'.
     * @deny (get) User with ID 'user456' cannot read a chat message under 'user123'.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}/chatMessages/{chatMessageId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }
  }
}