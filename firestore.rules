/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has full
 * control over their own data, and no other users can access it.
 *
 * Data Structure:
 * The data is structured hierarchically under the `/users/{userId}` path.
 * Character profiles, chat sessions, and chat messages are all nested under
 * the user who owns them.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Data for a user is nested under the /users/{userId} collection
 * - List operations are allowed for owners on user-scoped subcollections.
 *
 * Denormalization for Authorization:
 *  - User IDs are embedded within documents to simplify authorization checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own user profile.
     * @path /databases/{database}/documents/users/{userId}
     * @allow (get, update, delete) User with ID 123 can read/write their own profile.
     * @allow (create) User with ID 123 can create their own profile.
     * @deny (get, update, delete) User with ID 456 cannot read/write User 123's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Allows users to manage their character profiles.
     * @path /databases/{database}/documents/users/{userId}/characters/{characterId}
     * @allow (create, get, update, delete, list) User with ID 123 can create, read, update, delete, and list their character profiles.
     * @deny (create, get, update, delete, list) User with ID 456 cannot access User 123's character profiles.
     * @principle Restricts access to character profiles to their owners.
     */
    match /users/{userId}/characters/{characterId} {

      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Allows users to manage chat sessions for their character profiles.
     * @path /databases/{database}/documents/users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}
     * @allow (create, get, update, delete, list) User with ID 123 can create, read, update, delete and list chat sessions for their character profiles.
     * @deny (create, get, update, delete, list) User with ID 456 cannot access User 123's chat sessions.
     * @principle Restricts access to chat sessions to the owner of the parent character profile.
     */
    match /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId} {

      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Allows users to manage chat messages within their chat sessions.
     * @path /databases/{database}/documents/users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}/chatMessages/{chatMessageId}
     * @allow (create, get, update, delete, list) User with ID 123 can create, read, update, delete, and list chat messages within their chat sessions.
     * @deny (create, get, update, delete, list) User with ID 456 cannot access User 123's chat messages.
     * @principle Restricts access to chat messages to the owner of the parent chat session.
     */
    match /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}/chatMessages/{chatMessageId} {

      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }
  }
}