/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model.  Each user can only
 * access their own data.  Data validation is relaxed to allow for rapid prototyping.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile data.
 * - /users/{userId}/characters/{characterId}: Stores character profiles created by each user.
 * - /users/{userId}/personas/{personaId}: Stores user-created personas.
 *
 * Key Security Decisions:
 * - Users can only read and write their own data.
 * - Listing of users is disallowed for privacy.
 * - Flexible data validation to facilitate rapid iteration.
 * - No public data access without authentication.
 *
 * Denormalization for Authorization:
 *  - The userId is encoded in the document path to enforce ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to the user's root document.
     * @path /users/{userId}
     * @allow (create) - User with matching UID can create their own document.
     * @allow (get, update, delete) - User with matching UID can read/write their own document.
     * @deny (create) - User cannot create a document with a different UID.
     * @deny (get, update, delete) - User cannot read/write another user's document.
     * @principle Enforces document ownership and user-level access control.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Controls access to character profiles created by the user.
     * @path /users/{userId}/characters/{characterId}
     * @allow (create) - User with matching UID can create character profiles under their user ID. Requires the document ID to match.
     * @allow (get, list, update, delete) - User with matching UID can read/write character profiles under their user ID.
     * @deny (create) - User cannot create character profiles under another user's ID.
     * @deny (get, list, update, delete) - User cannot read/write character profiles under another user's ID.
     * @principle Enforces document ownership for character profiles.
     */
    match /users/{userId}/characters/{characterId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

        function isExistingOwner(userId) {
            return (isOwner(userId) && resource != null);
        }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to user personas.
     * @path /users/{userId}/personas/{personaId}
     * @allow (create) - User with matching UID can create personas under their user ID. Requires the document ID to match.
     * @allow (get, list, update, delete) - User with matching UID can read/write personas under their user ID.
     * @deny (create) - User cannot create personas under another user's ID.
     * @deny (get, list, update, delete) - User cannot read/write personas under another user's ID.
     * @principle Enforces document ownership for user personas.
     */
    match /users/{userId}/personas/{personaId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

        function isExistingOwner(userId) {
            return (isOwner(userId) && resource != null);
        }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
  }
}