rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /databases/{database}/documents/users/{userId}
     * @allow (create) User with ID 'user123' can create their own profile.
     * @allow (get) User with ID 'user123' can read their own profile.
     * @allow (update) User with ID 'user123' can update their own profile.
     * @allow (delete) User with ID 'user123' can delete their own profile.
     * @deny (create) User with ID 'user456' cannot create a profile for 'user123'.
     * @deny (get) User with ID 'user456' cannot read the profile of 'user123'.
     * @deny (update) User with ID 'user456' cannot update the profile of 'user123'.
     * @deny (delete) User with ID 'user456' cannot delete the profile of 'user123'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Controls access to character profiles owned by a user.
     * @path /databases/{database}/documents/users/{userId}/characters/{characterId}
     * @allow (create) User with ID 'user123' can create a character profile.
     * @allow (get) User with ID 'user123' can read their character profile.
     * @allow (update) User with ID 'user123' can update their character profile.
     * @allow (delete) User with ID 'user123' can delete their character profile.
     * @deny (create) User with ID 'user456' cannot create a character profile for 'user123'.
     * @deny (get) User with ID 'user456' cannot read the character profile of 'user123'.
     * @deny (update) User with ID 'user456' cannot update the character profile of 'user123'.
     * @deny (delete) User with ID 'user456' cannot delete the character profile of 'user123'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/characters/{characterId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to user personas owned by a user.
     * @path /databases/{database}/documents/users/{userId}/personas/{personaId}
     * @allow (create) User with ID 'user123' can create a persona.
     * @allow (get) User with ID 'user123' can read their persona.
     * @allow (update) User with ID 'user123' can update their persona.
     * @allow (delete) User with ID 'user123' can delete their persona.
     * @deny (create) User with ID 'user456' cannot create a persona for 'user123'.
     * @deny (get) User with ID 'user456' cannot read the persona of 'user123'.
     * @deny (update) User with ID 'user456' cannot update the persona of 'user123'.
     * @deny (delete) User with ID 'user456' cannot delete the persona of 'user123'.
     * @principle Enforces document ownership for all operations.
     */
      match /users/{userId}/personas/{personaId} {
        function isOwner(userId) {
          return request.auth.uid == userId;
        }

        function isExistingOwner(userId) {
            return isOwner(userId) && exists(resource);
        }

        function isSignedIn() {
          return request.auth != null;
        }

        allow get: if isSignedIn() && isOwner(userId);
        allow list: if false;
        allow create: if isSignedIn() && isOwner(userId);
        allow update: if isSignedIn() && isExistingOwner(userId);
        allow delete: if isSignedIn() && isExistingOwner(userId);
      }
  }
}