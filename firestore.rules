/**
 * @fileoverview Firestore Security Rules for the AI Character App.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has full control
 * over their own data, and no access to other users' data. Data is structured
 * hierarchically under the `/users/{userId}` path.
 *
 * Data Structure:
 * - `/users/{userId}`: Stores user profile information.
 * - `/users/{userId}/characters/{characterId}`: Stores character profiles created by the user.
 * - `/users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}`: Stores chat sessions for a specific character profile.
 * - `/users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}/chatMessages/{chatMessageId}`: Stores chat messages for a specific chat session.
 *
 * Key Security Decisions:
 * - User data is strictly segregated. Users can only read and write their own data.
 * - Listing of users is not allowed.
 * - Write operations must be authenticated.
 *
 * Denormalization for Authorization:
 *  - The `userId` is used in the path for every document ensuring clear ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requested user ID matches the authenticated user's ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the owner and the document exists.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Enforces access control for user documents.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' creates their profile.
     *     request.auth.uid: 'user123'
     *     request.resource.data.id: 'user123'
     * @allow (get) User with ID 'user123' reads their profile.
     *     request.auth.uid: 'user123'
     * @deny (update) User with ID 'user456' tries to update user 'user123's profile.
     *     request.auth.uid: 'user456'
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for character profiles.
     * @path /users/{userId}/characters/{characterId}
     * @allow (create) User with ID 'user123' creates a character profile.
     *     request.auth.uid: 'user123'
     *     request.resource.data.userId: 'user123'
     * @allow (get) User with ID 'user123' reads their character profile.
     *     request.auth.uid: 'user123'
     * @deny (update) User with ID 'user456' tries to update user 'user123's character profile.
     *     request.auth.uid: 'user456'
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/characters/{characterId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for chat sessions.
     * @path /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}
     * @allow (create) User with ID 'user123' creates a chat session.
     *     request.auth.uid: 'user123'
     * @allow (get) User with ID 'user123' reads their chat session.
     *     request.auth.uid: 'user123'
     * @deny (update) User with ID 'user456' tries to update user 'user123's chat session.
     *     request.auth.uid: 'user456'
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for chat messages.
     * @path /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}/chatMessages/{chatMessageId}
     * @allow (create) User with ID 'user123' creates a chat message.
     *     request.auth.uid: 'user123'
     * @allow (get) User with ID 'user123' reads their chat message.
     *     request.auth.uid: 'user123'
     * @deny (update) User with ID 'user456' tries to update user 'user123's chat message.
     *     request.auth.uid: 'user456'
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/characters/{characterId}/chatSessions/{chatSessionId}/chatMessages/{chatMessageId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}