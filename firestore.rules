/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user can only access their own data,
 * and no data is publicly accessible without authentication.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles and settings.
 * - /users/{userId}/characters/{characterId}: Stores character profiles created by the user.
 * - /users/{userId}/personas/{personaId}: Stores user-defined personas.
 *
 * Key Security Decisions:
 * - Users can only read and write their own user document.
 * - Users can only read and write character profiles they own.
 * - Users can only read and write personas they own.
 * - Listing of documents is allowed only within a user's own data tree.
 *
 * Denormalization for Authorization:
 *  - The `id` field on `User`, `CharacterProfile`, and `UserPersona` documents acts as the denormalized owner ID,
 *    simplifying ownership checks in the security rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles.
     * @path /users/{userId}
     * @allow (create) - User with ID 'user123' can create their own profile.
     *    - Request: auth.uid: 'user123', resource.data.id: 'user123'
     * @allow (get, list, update, delete) - User with ID 'user123' can read and modify their own profile.
     *    - Request: auth.uid: 'user123'
     * @deny (create, update, delete) - User with ID 'user456' cannot modify user 'user123' profile.
     *    - Request: auth.uid: 'user456'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to character profiles within a user's profile.
     * @path /users/{userId}/characters/{characterId}
     * @allow (create) - User with ID 'user123' can create a character profile in their own profile.
     *    - Request: auth.uid: 'user123'
     * @allow (get, list, update, delete) - User with ID 'user123' can read and modify character profiles in their own profile.
     *    - Request: auth.uid: 'user123'
     * @deny (create, update, delete) - User with ID 'user456' cannot modify character profiles in user 'user123' profile.
     *    - Request: auth.uid: 'user456'
     * @principle Enforces document ownership for all operations within a user's data tree.
     */
    match /users/{userId}/characters/{characterId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

      /**
       * @description Controls access to user personas within a user's profile.
       * @path /users/{userId}/personas/{personaId}
       * @allow (create) - User with ID 'user123' can create a persona in their own profile.
       *    - Request: auth.uid: 'user123'
       * @allow (get, list, update, delete) - User with ID 'user123' can read and modify personas in their own profile.
       *    - Request: auth.uid: 'user123'
       * @deny (create, update, delete) - User with ID 'user456' cannot modify personas in user 'user123' profile.
       *    - Request: auth.uid: 'user456'
       * @principle Enforces document ownership for all operations within a user's data tree.
       */
    match /users/{userId}/personas/{personaId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}